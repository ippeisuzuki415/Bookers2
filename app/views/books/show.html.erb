<main>
  <%= flash[:success] %>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
  
   <table class="table">
   <tbody>
      <tr></tr>
      <tr>
	     <th>name</th>
	     <th><%= @user.name %></th>
      </tr>
      <tr>
	     <th>introduction</th>
	     <th><%= @user.introduction %></th>
      </tr>
    </tbody>
   </table>
　
<div class="row">
  <%= link_to "",edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>
      <h1>New book</h1>
   <%= form_with model:@books, url: books_path, local:true do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
  <% end %>
  
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  
          <tbody>
          <tr>
              <td><%= link_to user_path(@book.user_id) do %>
               <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg"%><br>
                 <%= @book.user.name %>
               <% end %></td>
           <td><%= link_to @book.title, book_path(@book.id) %></td>
           <td><%= @book.body %></td> 
           <% if @book.user_id == current_user.id %>
            　<td><%= link_to "Edit", edit_book_path(@book) %></td>
            <% end %>
            
           <td><% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book), method: :delete %>
               <% end %>
           </td>
          </tr>
 
          </tbody>
      </table>
          </div>
        </div>
      </div>
  </main>
